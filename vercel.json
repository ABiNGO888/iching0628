{
  "framework": "nextjs",
  "buildCommand": "npx prisma generate --schema=./prisma/schema.prisma && npm run build",
  "installCommand": "npm ci",
  "env": {
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "false",
    "SKIP_ENV_VALIDATION": "true"
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["hkg1"]
}